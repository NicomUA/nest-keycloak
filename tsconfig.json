{
  "compilerOptions": {
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "declaration": true,
    "types": ["node"],
    "target": "es6",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "exclude": ["**/*.spec.ts", "./lib"],
  "include": ["**/*.ts"]
}
